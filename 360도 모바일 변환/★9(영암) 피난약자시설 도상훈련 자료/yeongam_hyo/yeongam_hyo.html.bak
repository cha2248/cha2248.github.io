  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let currentSlideIndex = 0;

      const slides = document.querySelectorAll(".slide");
      const progressBar = document.getElementById("progressBar");

      const showSlide = (index) => {
        slides.forEach((slide, i) => {
          slide.classList.toggle("active", i === index);
        });
        updateProgressBar(index);
      };

      const updateProgressBar = (index) => {
        const progress = ((index + 1) / slides.length) * 100;
        progressBar.style.width = progress + "%";
      };

      const onClickNextSlide = () => {
        currentSlideIndex = (currentSlideIndex + 1) % slides.length;
        showSlide(currentSlideIndex);
      };

      const onClickPrevSlide = () => {
        currentSlideIndex =
          (currentSlideIndex - 1 + slides.length) % slides.length;
        showSlide(currentSlideIndex);
      };

      document
        .getElementById("prevSlide")
        .addEventListener("click", onClickPrevSlide);

      document
        .getElementById("nextSlide")
        .addEventListener("click", onClickNextSlide);

      const iframe = document.getElementById("iframeDisplay");
      const overlay = document.getElementById("overlay");

      const showIframe = (src) => {
        iframe.src = src;
        iframe.style.display = "block";
        overlay.style.display = "block";
      };

      const clickEventHandler = () => {
        let iconClassAndUrlData = [
          { className: ".icon-16-1", url: "https://kuula.co/post/hXqKt" },
          { className: ".icon-16-2", url: "https://kuula.co/post/hXqZd" },
          { className: ".icon-16-3", url: "https://kuula.co/post/hXqZD" },
          { className: ".icon-16-4", url: "https://kuula.co/post/hXqZ6" },
          { className: ".icon-16-5", url: "https://kuula.co/post/hXqZJ" },
          { className: ".icon-16-6", url: "https://kuula.co/post/hXqZl" },
          { className: ".icon-16-7", url: "https://kuula.co/post/hXqZ5" },
          { className: ".icon-16-8", url: "https://kuula.co/post/hXqby" },
          { className: ".icon-16-9", url: "https://kuula.co/post/hXq1K" },
          { className: ".icon-16-10", url: "https://kuula.co/post/hXq16" },
          { className: ".icon-16-11", url: "https://kuula.co/post/hXq1k" },
          { className: ".icon-16-12", url: "https://kuula.co/post/hXq10" },
          { className: ".icon-16-13", url: "https://kuula.co/post/hXq1h" },
          { className: ".icon-16-14", url: "https://kuula.co/post/hXqbQ" },
          { className: ".icon-17-1", url: "https://kuula.co/post/hXqDM" },
          { className: ".icon-17-2", url: "https://kuula.co/post/hXqDc" },
          { className: ".icon-17-3", url: "https://kuula.co/post/hXqDq" },
          { className: ".icon-17-4", url: "https://kuula.co/post/hXqD5" },
          { className: ".icon-18-1", url: "https://kuula.co/post/hXqDr" },
          { className: ".icon-18-2", url: "https://kuula.co/post/hXqMG" },
          { className: ".icon-18-3", url: "https://kuula.co/post/hXqHt" },
          { className: ".icon-18-4", url: "https://kuula.co/post/hXqDW" },
          { className: ".icon-18-5", url: "https://kuula.co/post/hXqD8" },
          { className: ".icon-18-6", url: "https://kuula.co/post/hXqHL" },
          { className: ".icon-18-7", url: "https://kuula.co/post/hXqHf" },
          { className: ".icon-18-8", url: "https://kuula.co/post/hXqHq" },
          { className: ".icon-18-9", url: "https://kuula.co/post/hXqHJ" },
          { className: ".icon-18-10", url: "https://kuula.co/post/hXqHb" },
          { className: ".icon-18-11", url: "https://kuula.co/post/hXqHM" },
          { className: ".icon-18-12", url: "https://kuula.co/post/hXqM8" },
          { className: ".icon-18-13", url: "https://kuula.co/post/hXqMz" },
          { className: ".icon-18-14", url: "https://kuula.co/post/hXqHz" },
          { className: ".icon-18-15", url: "https://kuula.co/post/hXqHV" },
          { className: ".icon-19-1", url: "https://kuula.co/post/hXqTf" },
