          { className: ".icon-19-11", url: "https://kuula.co/post/hXqTR" },
          { className: ".icon-19-12", url: "https://kuula.co/post/hXqTy" },
          { className: ".icon-19-13", url: "https://kuula.co/post/hXqd4" },
          { className: ".icon-19-14", url: "https://kuula.co/post/hXqdN" },
          { className: ".icon-19-15", url: "https://kuula.co/post/hXqdh" },
          { className: ".icon-19-16", url: "https://kuula.co/post/hXqTw" },
          { className: ".icon-19-17", url: "https://kuula.co/post/hXqTs" },
          { className: ".icon-19-18", url: "https://kuula.co/post/hXqTj" },
        ];

        iconClassAndUrlData.forEach((icon) => {
          document
            .querySelector(icon.className)
            .addEventListener("click", () => {
              showIframe(icon.url);
            });
        });
      };

      clickEventHandler();

      const closeIframe = (e) => {
        if (!iframe.contains(e.target) &&
          !e.target.classList.contains("icon-16-1") &&
          !e.target.classList.contains("icon-16-2") &&
          !e.target.classList.contains("icon-16-3") &&
          !e.target.classList.contains("icon-16-4") &&
          !e.target.classList.contains("icon-16-5") &&
          !e.target.classList.contains("icon-16-6") &&
          !e.target.classList.contains("icon-16-7") &&
          !e.target.classList.contains("icon-16-8") &&
          !e.target.classList.contains("icon-16-9") &&
          !e.target.classList.contains("icon-16-10") &&
          !e.target.classList.contains("icon-16-11") &&
          !e.target.classList.contains("icon-16-12") &&
          !e.target.classList.contains("icon-16-13") &&
          !e.target.classList.contains("icon-16-14") &&
          !e.target.classList.contains("icon-17-1") &&
          !e.target.classList.contains("icon-17-2") &&
          !e.target.classList.contains("icon-17-3") &&
          !e.target.classList.contains("icon-17-4") &&
          !e.target.classList.contains("icon-18-1") &&
          !e.target.classList.contains("icon-18-2") &&
          !e.target.classList.contains("icon-18-3") &&
          !e.target.classList.contains("icon-18-4") &&
          !e.target.classList.contains("icon-18-5") &&
          !e.target.classList.contains("icon-18-6") &&
          !e.target.classList.contains("icon-18-7") &&
          !e.target.classList.contains("icon-18-8") &&
          !e.target.classList.contains("icon-18-9") &&
          !e.target.classList.contains("icon-18-10") &&
          !e.target.classList.contains("icon-18-11") &&
          !e.target.classList.contains("icon-18-12") &&
          !e.target.classList.contains("icon-18-13") &&
          !e.target.classList.contains("icon-18-14") &&
          !e.target.classList.contains("icon-18-15") &&
          !e.target.classList.contains("icon-19-1") &&
          !e.target.classList.contains("icon-19-2") &&
          !e.target.classList.contains("icon-19-3") &&
          !e.target.classList.contains("icon-19-4") &&
          !e.target.classList.contains("icon-19-5") &&
          !e.target.classList.contains("icon-19-6") &&
          !e.target.classList.contains("icon-19-7") &&
          !e.target.classList.contains("icon-19-8") &&
          !e.target.classList.contains("icon-19-9") &&
          !e.target.classList.contains("icon-19-10") &&
          !e.target.classList.contains("icon-19-11") &&
          !e.target.classList.contains("icon-19-12") &&
          !e.target.classList.contains("icon-19-13") &&
          !e.target.classList.contains("icon-19-14") &&
          !e.target.classList.contains("icon-19-15") &&
          !e.target.classList.contains("icon-19-16") &&
          !e.target.classList.contains("icon-19-17") &&
          !e.target.classList.contains("icon-19-18") &&
          true) {
          iframe.style.display = "none";
          overlay.style.display = "none";
        }
      };

      window.addEventListener("click", closeIframe);
      window.addEventListener("touchstart", closeIframe);

      window.addEventListener("keydown", (e) => {
        if (e.key === "ArrowLeft") {
          onClickPrevSlide();
        }
      });

      window.addEventListener("keydown", (e) => {
        if (e.key === "ArrowRight") {
          onClickNextSlide();
        }
      });

      let startX;

      const handleTouchStart = (e) => {
        startX = e.touches[0].clientX;
      };

      const handleTouchEnd = (e) => {
        if (!startX) return;

        let endX = e.changedTouches[0].clientX;
        let diffX = startX - endX;

        if (diffX > 50) {
          onClickNextSlide();
        } else if (diffX < -50) {
          onClickPrevSlide();
        }

        startX = null;
      };

      document.addEventListener("touchstart", handleTouchStart, false);
      document.addEventListener("touchend", handleTouchEnd, false);

      updateProgressBar(currentSlideIndex);
    });
  </script>
